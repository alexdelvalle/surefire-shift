    <h2> Log in </h2>

    <% if (typeof errorMessage !== "undefined") { %>
      <p class="error-message"> <%= errorMessage %> </p>
    <% } %>

    <form id="form" method="post" action="/process-login">

      <label for="email-input"> Email </label>
      <input id="email-input" type="email" placeholder="e.g. alex@gmail.com" name="loginEmail" />
      <br />

      <label for="password-input"> Password </label>
      <input id="password-input" type="password" placeholder="e.g. fightfires123!" name="loginPassword" />
      <br />

      <button> Log in </button>
    </form>

    <p> Don't have an account?
      <a href="/signup"> Sign up! </a>
    </p>
